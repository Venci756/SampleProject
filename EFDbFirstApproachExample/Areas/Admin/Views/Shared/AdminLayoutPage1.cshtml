<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
</head>
<style>
    #ProductName-error, #Authors-error, #Price-error, .validation-summary-errors, #UserName-error, #Password-error, #ConfirmPassword-error, #Email-error {
        color: red
    }
</style>
<body>
    <nav class="navbar navbar-expand-sm bg-primary navbar-dark">
        <a class="navbar-brand" href="#">Admin</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Categories/index">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/Products/index">Products</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/admin/Brands/index">Brands</a>
                </li>
                @if (User.Identity.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/MyProfile">My Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Logout">Logout</a>
                    </li>
                }
            </ul>



        </div>
        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="col-3 text-white">
                Welcome @User.Identity.Name
            </div>
        }
    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
